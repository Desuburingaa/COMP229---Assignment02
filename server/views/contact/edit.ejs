<%- include ../partials/header.ejs%>

<%- include ../partials/main_nav.ejs%>

<!-- Content for the Edit page -->

<div class="container">
    <div class="row">
        <div class = 'col-md-offset-3 col-md-offset-6'>
            <h1><%= title %></h1>

            <form class='form' method="post">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="from-control"
                    id="nameTextField"
                    placeholder="Contact Name"
                    name="name" value="<%= contact.name %>" 
                    required>
                </div>
                    
                <div class="form-group">
                    <label for="nubmer">Phone</label>
                    <input type="number" class="from-control"
                    id="number"
                    placeholder="Phone Number"
                    name="number"
                    value="<%= contact.number %>"
                    required>
                </div>
                    
                <div class="form-group">
                    <label for="emailField">Email</label>
                    <input type="email" class="from-control"
                    id="emailField"
                    placeholder="Email Address"
                    name="email"
                    value="<%= contact.email %>" 
                    required>
                </div>

                <button class="btn btn-primary" type='submit'>
                    <i class = 'fas fa-edit'></i> &nbsp;Update Contact
                </button>
                
                <a href='/contact-list' class='btn btn-warning'>
                    <i class='fas fa-undo'></i> &nbsp;Cancel
                </a>
            </div>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs%>

<%- include ../partials/footer.ejs%>